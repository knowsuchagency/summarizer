{
  "name": "summarizer",
  "displayName": "Summarizer",
  "version": "0.0.1",
  "description": "An article summarizer utilizing kagi",
  "author": "stephanfitzpatrick",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox:dev": "npx plasmo build --target=firefox-mv2 --tag=dev ; python3 scripts/doctor_firefox_manifest.py",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.64.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/chrome": "0.0.210",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "prettier": "2.8.3",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
